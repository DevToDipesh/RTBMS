<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#A00C03</item>
        <item name="colorPrimaryDark">#A00C03</item>
        <item name="android:fontFamily">@font/josefinsans_regular</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FloatingButton" parent="Widget.MaterialComponents.BottomAppBar">

        <item name="backgroundTint">#A00C03</item>
    </style>

    <style name="TextStyleBNV">
        <item name="android:textSize" tools:ignore="PrivateResource">
            @dimen/design_bottom_navigation_text_size
        </item>
        <item name="android:padding">5dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:background">@mipmap/app_logo</item>
    </style>

    <style name="Theme.SearchView" parent="AppTheme">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:editTextColor">#80000000</item>
        <item name="android:textColorHint">#80000000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
